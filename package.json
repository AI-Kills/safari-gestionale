{
  "version": "2.5.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "postinstall": "prisma generate",
    "add": "npx shadcn@latest add",
    "t": "vitest run --config /dev/null $*",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:general-interface": "vitest test/general-interface.test.ts",
    "test:auth-transformers": "vitest test/auth-and-transformers.test.ts",
    "test:hooks": "vitest test/hooks.test.ts",
    "test:all-new": "vitest test/general-interface.test.ts test/auth-and-transformers.test.ts test/hooks.test.ts",
    "test:watch": "vitest --watch",
    "test-actions": "pnpm vitest test/actions.test.ts --run",
    "test-validation": "pnpm vitest test/validation.test.ts --run",
    "test-utilities": "pnpm vitest test/utils.test.ts --run",
    "test-auth": "pnpm vitest test/auth.test.ts --run",
    "test-pages": "pnpm vitest test/pages.test.ts --run",
    "test-aggiungi": "pnpm vitest test/pages.test.ts --run --grep=\"Aggiungi Page\"",
    "test-clienti-table": "pnpm vitest test/pages.test.ts --run --grep=\"Clienti Table Page\"",
    "test-preventivi-table": "pnpm vitest test/pages.test.ts --run --grep=\"Preventivi Table Page\"",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:create": "prisma migrate dev --create-only",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "tsx prisma/seed/seed.ts",
    "db:deploy": "prisma migrate deploy",
    "db:status": "prisma migrate status",
    "db:generate:test": "prisma generate --schema=prisma/schema.test.prisma",
    "db:push:test": "prisma db push --schema=prisma/schema.test.prisma --force-reset --accept-data-loss",
    "test-crud": "pnpm vitest test/crud-operations.test.ts --run",
    "test-dual-schema": "node test/simple-db-test.js",
    "test-crud-complete": "node test/complete-crud-test.js",
    "db:fresh": "pnpm db:reset && pnpm db:seed",
    "db:quick-seed": "pnpm db:seed",
    "db:setup": "pnpm db:migrate && pnpm db:seed",
    "clean-cache": "rm -rf .next && pnpm next build --no-lint",
    "pre-push": "pnpm test:stable && pnpm build",
    "test:all": "vitest run --reporter=verbose",
    "test:stable": "vitest run test/validation.test.ts test/utils.test.ts test/preventivi-list-display.test.ts --reporter=verbose",
    "test:db": "vitest run test/crud-operations.test.ts test/actions.test.ts --reporter=verbose",
    "test:integration": "vitest run test/cliente-search.test.ts test/pagamenti-integration.test.ts --reporter=verbose"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.4",
    "@lottiefiles/dotlottie-react": "^0.12.0",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tanstack/react-table": "^8.21.2",
    "autoprefixer": "10.4.19",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.4.3",
    "lucide-react": "^0.474.0",
    "moment": "^2.30.1",
    "next": "14.2.15",
    "next-auth": "5.0.0-beta.20",
    "postcss": "8.4.38",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.5.2",
    "use-debounce": "^10.0.4",
    "zod": "^3.23.8"
  },
  "prisma": {
    "seed": "tsx prisma/seed/seed.ts"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "20.14.8",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "jsdom": "^26.1.0",
    "prisma": "^6.14.0",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.12.0"
  }
}
